{
  "manifest_version": 2,
  "name": "Window containers",
  "version": "1.0.0",
  "author": "Yiannis Crhoankis",

  "description": "All tabs in a window are loaded in the container of the first tab.",

  "icons": {
    "48": "icons/container-site-pinned-plain.svg",
    "96": "icons/container-site-pinned-plain.svg"
  },

  "background": {
    "scripts": ["wsc-background.js"]
  },
  "permissions": [
    "<all_urls>",
    "contextualIdentities",
    "cookies",
    "tabs",
    "webNavigation"
  ]
}
